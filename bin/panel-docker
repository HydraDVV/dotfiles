#! /bin/bash
# panel-docker.sh - Docker panel
# @umutsevdi 
#   A script that displays the number of active docker containers
# and their names
# @requires docker

if ! command -v docker &> /dev/null ; then
    echo "Docker doesn't exist" 1>&2
fi

COUNT=$(docker ps -q | wc -l | sed -r 's/^0$//g' 2> /dev/null)
if (( COUNT > 0 )); then
    data=$(docker ps 2> /dev/null| awk 'NR>1' | awk '{ print $2 }'  | tr '\n' '|')
    echo " ïŒˆ   ${data::-1} ($COUNT)"
else 
    echo
fi
